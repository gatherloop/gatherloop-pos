{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/main.go",
        "outputPath": "{projectRoot}/dist/api",
        "env": {
          "GOOS": "linux",
          "GOARCH": "amd64"
        }
      },
      "dependsOn": [
        {
          "projects": "api-contract",
          "target": "generate:go"
        }
      ]
    },
    "image:build": {
      "command": "docker build -t gatherloop/gatherloop-pos-api --platform linux/amd64 .",
      "options": {
        "cwd": "apps/api"
      }
    },
    "image:push": {
      "command": "docker push gatherloop/gatherloop-pos-api",
      "options": {
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go"
      },
      "dependsOn": [
        {
          "projects": "api-contract",
          "target": "generate:go"
        }
      ]
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    }
  }
}
